{
	"atom": {
		"rewriteTsconfig": false
	},
	"awesomeTypescriptLoaderOptions": {
		"forkChecker": true,
		"useWebpackText": true,
		"useCache": false
	},
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "es2015",
		"target": "es5",
		"noImplicitAny": false,
		"noEmitOnError": true,
		"removeComments": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"lib": [ "es2016", "dom" ],
		"types": [ "node" ]
	},
	"exclude": [ "bin", "node_modules" ],
	"include": [
		"ClientApp"
	]
}